#include <iostream>
#include <vector>
#include <algorithm>
#include <iomanip>

using namespace std;

struct record
{
	int index, value;
};

bool operator < (record x, record y)
{
	if (x.value == y.value)
		return x.index < y.index;
	else
		return x.value < y.value;
}

bool cmp(record x, record y)
{
    if (x.value == y.value)
        return x.index > y.index;
    else
        return x.value > y.value;
}

int main(int argc, char* argv[])
{
    vector < record > records;
    for (int i = 1; i <= 8; i++)
        records.push_back((record){i, i});
        
    sort(records.begin(), records.end());
    sort(records.begin(), records.end(), cmp);
    
    return 0;
}
